<?xml version="1.0" encoding="utf-8"?>

                                                     
                                                 

	 

             
                  
                                                           

         

	 <com.google.android.material.card.MaterialCardView
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  app:strokeColor="@color/white"
		  app:strokeWidth="1dp"
		  app:cardBackgroundColor="@android:color/transparent"
		  app:cardCornerRadius="@dimen/_10sdp"
		  app:cardUseCompatPadding="true" android:tag="layout/item_rv_forcast_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

		  <androidx.constraintlayout.widget.ConstraintLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:layout_margin="8dp"
			   android:padding="8dp">

			   <ImageView
					android:id="@+id/imgWeather"
					android:layout_width="44dp"
					android:layout_height="44dp"
					android:scaleType="centerCrop"
					android:tag="binding_1"       
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />

			   <TextView
					android:id="@+id/tvCity"
					style="@style/FontSemiBold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:textColor="@color/white"
					android:textSize="16sp"
					android:tag="binding_2"       
					app:layout_constraintStart_toEndOf="@+id/imgWeather"
					app:layout_constraintTop_toTopOf="parent"
					tools:text="Cairo" />

			   <TextView
					android:id="@+id/tvDate"
					style="@style/FontRegular"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="2dp"
					android:ellipsize="end"
					android:maxLines="1"
					android:textColor="@color/white"
					android:textSize="10sp"
					android:tag="binding_3"       
					app:layout_constraintStart_toStartOf="@+id/tvCity"
					app:layout_constraintTop_toBottomOf="@+id/tvCity"
					tools:ignore="SmallSp"
					tools:text="Fri, 7 Sep" />


			   <TextView
					android:id="@+id/tvTemp"
					style="@style/FontSemiBold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/white"
					android:textSize="24sp"
					android:tag="binding_4"     
					app:layout_constraintBottom_toBottomOf="@+id/tvDate"
					app:layout_constraintEnd_toStartOf="@+id/text_label_degree"
					app:layout_constraintTop_toTopOf="@+id/tvCity"
					tools:text="28" />

			   <TextView
					android:id="@+id/text_label_degree"
					style="@style/FontRegular"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/temp_symbol"
					android:textColor="@color/white"
					android:textSize="12sp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="@+id/tvTemp" />

		  </androidx.constraintlayout.widget.ConstraintLayout>

	 </com.google.android.material.card.MaterialCardView>

         